<div class="container">
    <h3 class="page-header mt-4">Remindly - Admin Page</h3>

    <p class="fs-3 w-light"># Current Active Sessions</p>
    <table class="table table-sm ">
        <thead>
            <tr>

                <th scope="col">SessionID</th>
                <th scope="col">UserID</th>
                <th scope="col">Option</th>
            </tr>
        </thead>
        <tbody>
            <% Object.keys(sessions).forEach(function (session) { %>
                <tr>
                    <td class="w-10" style="vertical-align: middle;">
                        <%= session %>
                    </td>
                    <td style="vertical-align: middle;">
                         <%= sessions[session].passport.user %>
                    </td>
                    <% if (sessions[session].passport.user === user.id && user.role === "admin") { %>
                        <td style="vertical-align: middle;">
                            <span>Administrator</span>
                        </td>
                        <% } else { %>
                            <td style="vertical-align: middle;">
                                <a href="/session/<%= session %>" onclick="return confirm('Are you sure to delete?')">
                                    <span>Revoke Session</span>
                                </a>
                            </td>
                            <% } %>
                </tr>
                <% }) %>
        </tbody>
    </table>

</div>